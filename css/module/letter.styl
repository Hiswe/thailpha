.letter-container {
  min-height: calc(100vh - 40px);
  display: flex;
  flex-direction: column;
}
.letter-hint,
.letter-meaning,
.letter-thai,
.letter-pronunciation {
  text-align: center;
}
.letter-meaning,
.letter-pronunciation {
  font-size: 7vw;
  padding: $gutter;
  font-weight: 300;
}
.letter-meaning {
  order: 1;
}
.letter-meaning-thai {
  display: none;
}
.letter-thai {
  order: 2;
  flex-grow: 1;
  font-size: 90vw;
  font-weight: 400;
  display: flex;
  flex-center();
  line-height: .8;
}
.letter-pronunciation {
  order: 3;
}
.letter-pronunciation-label {
  color: $c-grey;
  padding: 0 .5em;
}

.letter-hint {
  order: 4;
  border-top: 1px solid $c-black;
  padding: $gutter;
  margin: 0;
}
