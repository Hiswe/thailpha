#letter {
  position: fixed;
  top:0;
  right: 0;
  bottom: $s-nav;
  left: 0;
  overflow: auto;
  -webkit-overflow-scrolling: touch;
  background: $c-white;
}

.letter-container {
  height: calc(100vh - var(--nav-height));
}
.letter-hint,
.letter-meaning,
.letter-thai,
.letter-pronunciation {
  text-align: center;
}
.letter-meaning,
.letter-pronunciation {
  font-size: 7vw;
  padding: $gutter;
  font-weight: 300;
}
.letter-meaning {
  margin: 0;
  padding-bottom: 0;
}
  .letter-meaning-translation {
    display: block;
    color: $c-grey;
  }
  .letter-meaning-thai {
    display: none;
  }

.letter-pronunciation {
  padding-top: 0;
}
.letter-pronunciation-label {
  color: $c-grey;
  padding: 0 .5em;
}

.letter-hint {
  border-top: 1px solid $c-black;
  padding: $gutter;
  margin: 0;
}

.letter-container {
  > .thai-letter {
    font-size: fluid-fs( 10 );
    font-weight: 400;
    line-height: 1;

    @media $mq-big {
      font-size: fluid-fs( 5 );
    }
  }

  &.is-vowel > .thai-letter {
    font-size: fluid-fs( 5 );

    @media $mq-big {
      $ffs    = 2.5
      $ffsX2  = $ffs * 2
      font-size: fluid-fs( 2.5 );
    }
  }

  .thai-letter {
    &.n-sip,
    &.n-sip-et,
    &.n-yi-sip { font-size: 75vw; }
    &.n-roi {    font-size: 50vw; }
    &.n-phan {   font-size: 35vw; }
    &.n-muen {   font-size: 30vw; }
    &.n-saen {   font-size: 25vw; }
    &.n-lan {    font-size: 20vw; }
  }
}

.letter-variant {
  list-style: none;
  padding: 0;
  margin: $gutter;

  li {
    border: 1px solid $c-grey-light;
    font-size: 15vw;
    line-height: 0;

    + li {
      border-left: 0;
    }
  }
}

@media $mq-landscape {
  .letter-container {
    position: relative;
    align-items: flex-end;

    .thai-letter {
      font-size: fluid-fs( 5 );
      width: 75%;
      border-left: 1px solid $c-grey-light;
    }
    .letter-meaning,
    .letter-pronunciation {
      position: absolute;
      width: 25%;
      left: 0;
      font-size: 4vw;
    }
    .letter-pronunciation {
      padding-top: $gutter;
      border-top: 1px solid $c-grey-light;
      top: 50%;
      span {
        float: left;
      }
      .letter-pronunciation-label {
        clear: left;
      }
    }

    .letter-hint {
      width: 100%;
    }
  }
}
.letter-container {
  display: flex;
  flex-direction: column;
}
.letter-meaning {
  order: 1;
}
.letter-pronunciation {
  order: 3;
}
.letter-hint {
  order: 4;
}
.letter-container {
  > .thai-letter {
    order: 2;
    flex-grow: 1;
    display: flex;
    flex-center();
  }
}
.letter-variant {
  order: 4;
  flex-grow: 1;
  display: flex;

  &:empty {
    display: none;
  }

  @media $mq-landscape {
    width: 75%;
    margin: 0;
    border-left: 1px solid $c-grey-light;
  }

  .thai-letter {
    display: flex;
    flex-center();
    flex-grow: 1;
    flex-basis: 1%;

    @media $mq-landscape {
      margin: $gutter;
      font-size: fluid-fs( 3 );

      & + .thai-letter {
        margin-left: 0;
      }
    }
  }
}
