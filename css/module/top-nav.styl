.top-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background: $c-black;
  text-decoration: none;
  color: $c-white;

  display: flex;
  align-items: center;

  a {
    height: $s-nav;
    padding: 0 $gutter;
    color: $c-white;
    text-decoration: none;
    display: inline-flex;
    align-items: center;
  }
}

.top-nav-settings {
  margin-left: auto;
}
