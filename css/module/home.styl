.preview-list {
  margin: 0;
  padding: 0;
  border: solid $c-grey-light;
  border-width: 1px 0 0;
}
.preview-list-item {
  list-style: none;
  width: 25vw;
  min-height: @width;
  border: 1px solid $c-grey-light;
  border-width: 0 1px 1px  0;
  cursor: pointer;

  &.class-high {
    background: $c-high;
  }
  &.class-low {
    background: $c-low;
  }

  p {
    margin: 0;
    text-align: center;
  }

  .thai-letter {
    font-size: 15vw;
  }
}

.preview-list-item-rtgs {
  font-size: 3vw;
  padding: .5em 0 .25em;
  // order: -1;
}
.preview-list-item-meaning {
  color: $c-grey;
  font-size: 3vw;
}

.preview-list-vowels {
  .thai-letter {
    font-size: 10vw;
  }
}
.thai-letter.n-roi  { font-size: 12vw;}
.thai-letter.n-phan { font-size: 9vw;}
.thai-letter.n-muen { font-size: 7vw;}
.thai-letter.n-saen { font-size: 6vw;}
.thai-letter.n-lan {  font-size: 5.5vw;}

+mq('small-only') {
  .preview-list-item {
    &:nth-child(4n + 4) {
      border-width: 0 0 1px 0;
    }
  }
}

+mq('big') {
  .preview-list-item {
    width: (100%/7);
    min-height: 140px;

    &:nth-child(7n + 7) {
      border-width: 0 0 1px 0;
    }
    .thai-letter {
      font-size: 80px;

      .preview-list-vowels & {
        font-size: 60px;
      }
      &.n-roi {   font-size: 70px;}
      &.n-phan {  font-size: 55px;}
      &.n-muen {  font-size: 45px;}
      &.n-saen {  font-size: 35px;}
      &.n-lan {   font-size: 25px;}
    }
  }
  .preview-list-item-meaning,
  .preview-list-item-rtgs {
    font-size: 16px;
  }
}


.no-flexbox {
  .preview-list-item {
    float: left;

    .thai-letter {
      height: 50px;

      &::before {
        content: '';
        height: 100%;
        display: inline-block;
        vertical-align: middle;
      }
    }
  }

  .preview-list-vowels .thai-letter {
    height: 70px;
  }

  dd::after {
    content: '';
    display: table;
    clear: both;

  }
}

.flexbox {
  .preview-list {
    display: flex;
    flex-wrap: wrap;
  }
  .preview-list-item {
    display: inline-flex;
    flex-direction: column;

    .thai-letter {
      flex-grow: 1;
      display: flex;
      flex-center();
    }
  }
}
