.preview-list {
  margin: 0;
  padding: 0;
  border: solid $c-grey-light;
  border-width: 1px 0 0;
  display: flex;
  flex-wrap: wrap;
}
.preview-list-item {
  display: inline-flex;
  flex-direction: column;
  width: 25vw;
  min-height: @width;
  border: 1px solid $c-grey-light;
  border-width: 0 1px 1px  0;
  cursor: pointer;

  p {
    margin: 0;
    text-align: center;
  }

  .thai-letter {
    font-size: 15vw;
    flex-grow: 1;
    display: flex;
    flex-center();
  }

  &:nth-child(4n + 4) {
    border-width: 0 0 1px 0;
  }
}

.preview-list-item-rtgs {
  font-size: 12px;
  padding: .5em 0 .25em;
  order: -1;
}

.preview-list-vowels {
  .thai-letter {
    font-size: 10vw;
  }
}
.thai-letter.n-roi  { font-size: 12vw;}
.thai-letter.n-phan { font-size: 9vw;}
.thai-letter.n-muen { font-size: 7vw;}
.thai-letter.n-saen { font-size: 6vw;}
.thai-letter.n-lan {  font-size: 5.5vw;}

@media only screen and (min-width: 1024px) {
  .preview-list-item {
    width: 16.6vw;
    &:nth-child(4n + 4) {
      border-width: 0 1px 1px  0;
    }
    &:nth-child(6n + 6) {
      border-width: 0 0 1px 0;
    }


    .thai-letter {
      font-size: 20px !important;
    }
  }
}
