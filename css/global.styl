*,
*::before,
*::after {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  font-family: 'Helvetica', 'Arial', 'sans-serif';
  color: $c-black;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}
header {
  position: relative;
}

dl,
dd {
  padding:  0;
  margin:   0;
}
dt {
  padding: $gutter $gutter ($gutter/2);
  background: $c-grey-lightest;
}

header,
.main,
footer {
  padding: $gutter;
}
footer {
  border-top: 1px solid $c-black;
  padding-bottom: ($gutter/2);
  > * {
    margin: .5em 0 0;
  }
}

.main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}

.version {
  font-size: 12px;
  margin-top: 1em;
  text-align: center;
  color: $c-grey;
}
