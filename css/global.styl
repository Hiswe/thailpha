*,
*::before,
*::after {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  font-family: 'Helvetica', 'Arial', 'sans-serif';
  color: $c-black;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

header {
  position: relative;
}

header,
.main {
  padding: $gutter;
}

.main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
