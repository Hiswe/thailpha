*,
*::before,
*::after {
  box-sizing: border-box;
}

html,
body {
  margin: 0;
  font-family: 'Helvetica', 'Arial', 'sans-serif';
  color: $c-black;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}
body {
  display: flex;
  flex-direction: column;
  min-height: 100vh;
}

header {
  position: relative;
}

header,
.main,
footer {
  padding: $gutter;
}
footer {
  border-top: 1px solid $c-black;
}
.footer-action {
  padding: 0;
  display: flex;

  > * {
    padding: $gutter;
    text-align: center;
    flex-grow: 1;
  }
}

.settings {
  position: absolute;
  right: ($gutter/2);
  top: @right;
  color: $c-brand;
  text-decoration: none;
  width: 40px;
  height: 40px;
  font-size: 3em;
  text-align: center;
}

.main {
  flex-grow: 1;
  display: flex;
  flex-direction: column;
}
