*,
*::before,
*::after {
  box-sizing: border-box;
}
html,
body {
  margin: 0;
  font-family: 'Helvetica', 'Arial', 'sans-serif';
  color: $c-black;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.is-html-fixed,
.is-html-fixed body {
  overflow: hidden;
}

body {
  background: $c-grey-light;
}

#app-wrapper {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: $c-white;
  padding-bottom: $s-nav;

  +mq('big') {
    max-width: 1280px;
    margin: 0 auto;
  }
}

dl,
dd {
  padding:  0;
  margin:   0;
}
dt {
  padding: $gutter $gutter ($gutter/2);
  background: $c-grey-lightest;
}

body > svg {
  hide();
}
.icon {
  fill: currentColor;
}
