doctype html
html(lang="en")
  head
    meta(charset="utf-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")

    link(rel="icon" sizes="228x228" href=`${BASE_URL}/touch-icon-iphone-6-plus.png`)

    meta(name="viewport" content="width=device-width")

    link(rel="apple-touch-icon" href=`${BASE_URL}/touch-icon-iphone.png`)
    link(rel="apple-touch-icon" sizes="76x76" href=`${BASE_URL}/touch-icon-ipad.png`)
    link(rel="apple-touch-icon" sizes="120x120" href=`${BASE_URL}/touch-icon-iphone-retina.png`)
    link(rel="apple-touch-icon" sizes="152x152" href=`${BASE_URL}/touch-icon-ipad-retina.png`)
    link(rel="apple-touch-icon" sizes="180x180" href=`${BASE_URL}/touch-icon-iphone-6-plus.png`)

    link(rel="manifest" href=`${BASE_URL}/manifest.json`)

    title= appTitle
    link(rel="stylesheet" href=`${BASE_URL}/thailpha.css`)

    if (isGhRelease)
      // Start Single Page Apps for GitHub Pages
      script.
        (function(l) {
          if (l.search) {
            var q = {};
            l.search.slice(1).split('&').forEach(function(v) {
              var a = v.split('=');
              q[a[0]] = a.slice(1).join('=').replace(/~and~/g, '&');
            });
            if (q.p !== undefined) {
              window.history.replaceState(null, null,
                l.pathname.slice(0, -1) + (q.p || '') +
                (q.q ? ('?' + q.q) : '') +
                l.hash
              );
            }
          }
        }(window.location))
      // End Single Page Apps for GitHub Pages

  body
    include svg-icons.svg
    #main
    script(src=`${BASE_URL}/thailpha-lib.js`)
    script(src=`${BASE_URL}/thailpha.js`)
